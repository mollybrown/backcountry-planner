<%= render partial: 'shared/navbar' %>

<div class="container">
  <h1><%= @park.name %></h1>
  <h3><%= @park.description %></h3>

    <h4>Available Campgrounds</h4>
    <% @campgrounds.each do |campground| %>
      <div class="col s12 m12">
        <div class="card horizontal hoverable">
          <div class="card-image">

          </div>
          <div class="card-stacked">
            <span class="card-title"><%= campground.name %></span>
            <i class="material-icons">
              <%= link_to "add", new_trip_path(campground: campground.name,
                                               national_park_id: @park.id,
                                               description: campground.description),
                                               class: "btn-floating halfway-fab waves-effect waves-light red"
                                              %>
            </i>
          </div>
          <div class="card-content">
            <p><%= truncate(strip_tags(campground.description), length: 600) %></p>
          </div>
        </div>
      </div>
    <% end %>

</div>
